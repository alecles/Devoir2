<UserControl x:Class="Devoir2.View.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Devoir2.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Action">
                <MenuItem Header="_Sauvegarder" InputGestureText="Alt+S" Command="{Binding sauvegarderCommande}"/>
                <MenuItem Header="_Quitter" InputGestureText="Alt+Q" Command="{Binding quitterCommande}"/>
            </MenuItem>
        </Menu>
    </StackPanel>
</UserControl>
